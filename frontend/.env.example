# ================================================================
# ANDE Explorer - Environment Variables
# ================================================================

# Chain Configuration
NEXT_PUBLIC_CHAIN_ID=6174
NEXT_PUBLIC_CHAIN_NAME=Ande Chain
NEXT_PUBLIC_NETWORK_CURRENCY=ETH
NEXT_PUBLIC_NETWORK_CURRENCY_DECIMALS=18
NEXT_PUBLIC_IS_L2_NETWORK=false

# API Endpoints
NEXT_PUBLIC_API_URL=https://explorer-advanced.ande.chain/api
NEXT_PUBLIC_WS_URL=wss://explorer-advanced.ande.chain/ws
NEXT_PUBLIC_RPC_URL=https://rpc.ande.network

# Explorer URLs
NEXT_PUBLIC_EXPLORER_URL=https://explorer.ande.network
NEXT_PUBLIC_ADVANCED_EXPLORER_URL=https://explorer-advanced.ande.network

# Features
NEXT_PUBLIC_SHOW_GAS_TRACKER=true
NEXT_PUBLIC_ENABLE_WEBSOCKETS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# App Info
NEXT_PUBLIC_APP_NAME=ANDE Explorer
NEXT_PUBLIC_APP_VERSION=2.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Professional Blockchain Explorer for Ande Chain
NEXT_PUBLIC_DEFAULT_THEME=light

# ================================================================
# PERFORMANCE - Upstash Redis Cache
# ================================================================

# Enable Redis caching (set to "true" for production)
REDIS_ENABLED=true

# Upstash REST API (Recommended for Vercel)
UPSTASH_REDIS_REST_URL=https://your-database.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token_here

# Note: Get credentials from https://console.upstash.com/
# Free tier: 10,000 requests/day
