# ============================================================================
# BLOCKSCOUT BACKEND CONFIGURATION FOR ANDE CHAIN
# ============================================================================
# Copiar este archivo a .env y configurar los valores

# ============================================================================
# ETHEREUM JSON RPC ENDPOINTS
# ============================================================================
ETHEREUM_JSONRPC_VARIANT=geth
ETHEREUM_JSONRPC_HTTP_URL=https://rpc.ande.network
ETHEREUM_JSONRPC_WS_URL=wss://rpc.ande.network
ETHEREUM_JSONRPC_TRACE_URL=https://rpc.ande.network

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================
CHAIN_ID=6174
NETWORK=ANDE Chain
SUBNETWORK=Testnet
COIN=ANDE
COIN_NAME=Ande Token

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_DB=blockscout
POSTGRES_USER=blockscout
POSTGRES_PASSWORD=CAMBIAR_EN_PRODUCCION_STRONG_PASSWORD
POSTGRES_PORT=7432

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_PORT=6379

# ============================================================================
# BLOCKSCOUT API CONFIGURATION
# ============================================================================
BLOCKSCOUT_HOST=localhost
BLOCKSCOUT_PROTOCOL=http
BLOCKSCOUT_PORT=4000
API_V2_ENABLED=true

# ============================================================================
# INDEXER CONFIGURATION
# ============================================================================
INDEXER_DISABLE_PENDING_TRANSACTIONS_FETCHER=false
INDEXER_DISABLE_INTERNAL_TRANSACTIONS_FETCHER=false
INDEXER_CATCHUP_BLOCKS_BATCH_SIZE=10
INDEXER_CATCHUP_BLOCKS_CONCURRENCY=10
INDEXER_MEMORY_LIMIT=1

# ============================================================================
# BLOCK TRANSFORMER
# ============================================================================
BLOCK_TRANSFORMER=base

# ============================================================================
# SECURITY
# ============================================================================
# IMPORTANTE: Generar nuevo secret con: openssl rand -base64 64
SECRET_KEY_BASE=56NtB48ear7+wMSf0IQuWDAAazhpb31qyc7GiyspBP1vkBAgWFI4T8V3K1dP0fY9
ERLANG_COOKIE=blockscout-ande-cookie-change-in-production

# ============================================================================
# PERFORMANCE
# ============================================================================
POOL_SIZE=40
POOL_SIZE_API=10

# ============================================================================
# API RATE LIMITING
# ============================================================================
API_RATE_LIMIT_DISABLED=false
API_RATE_LIMIT=50
API_RATE_LIMIT_TIME_INTERVAL_MS=1000

# ============================================================================
# LOGGING
# ============================================================================
LOGGER_LEVEL=info

