# ============================================================================
# ANDE EXPLORER - Environment Configuration Template
# ============================================================================
# Copy this file to appropriate locations and customize values
# DO NOT commit actual values to git (use .env.* in .gitignore)
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_USER=blockscout
DB_PASSWORD=your-secure-db-password-change-this
DB_NAME=blockscout
DB_PORT=5432

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_PASSWORD=your-secure-redis-password-change-this
REDIS_PORT=6379

# ============================================================================
# RPC CONFIGURATION
# ============================================================================
# Point to your Ande Network RPC node
RPC_URL=http://ev-reth-sequencer:8545
RPC_WS_URL=ws://ev-reth-sequencer:8546
CHAIN_ID=42170

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENV=prod

# ============================================================================
# BLOCKSCOUT MAIN EXPLORER
# ============================================================================
BLOCKSCOUT_HOST_MAIN=explorer.ande.network
BLOCKSCOUT_PROTOCOL=https
NETWORK_NAME_MAIN=Ande Network
LOGO_URL_MAIN=https://ande.network/logo.png
FOOTER_LOGO_URL_MAIN=https://ande.network/logo-footer.png
SECRET_KEY_BASE=your-secret-key-base-main-change-this

# API Rate Limiting - Main
API_RATE_LIMIT_BY_KEY=50
API_RATE_LIMIT_BY_IP=100

# ============================================================================
# BLOCKSCOUT ADVANCED EXPLORER
# ============================================================================
BLOCKSCOUT_HOST_ADVANCED=explorer-advanced.ande.network
NETWORK_NAME_ADVANCED=Ande Network (Analytics)
LOGO_URL_ADVANCED=https://ande.network/logo.png
FOOTER_LOGO_URL_ADVANCED=https://ande.network/logo-footer.png
SECRET_KEY_BASE_ADV=your-secret-key-base-advanced-change-this

# API Rate Limiting - Advanced (Higher limits for analytics)
API_RATE_LIMIT_BY_KEY_ADV=200
API_RATE_LIMIT_BY_IP_ADV=500

# ============================================================================
# SMART CONTRACT VERIFICATION
# ============================================================================
SMART_CONTRACT_VERIFICATION=true
SMART_CONTRACT_SRC=eth_bytecode_db

# ============================================================================
# FEATURES
# ============================================================================
SHOW_PRICE_CHART=false
SHOW_MARKET_CAP_CHART=false
DISPLAY_TOKEN_ICONS=true
ENABLE_TXS_STATS=true
SHOW_VALIDATORS=false
ENABLE_ADVANCED_ANALYTICS=true

# ============================================================================
# ANALYTICS (Optional)
# ============================================================================
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_GTAG_CONVERSION_ID=

# ============================================================================
# CLOUDFLARE CONFIGURATION (Optional - for tunneling)
# ============================================================================
# Cloudflare Tunnel token (if using managed tunnel)
# CLOUDFLARE_TOKEN=your-cloudflare-tunnel-token

# ============================================================================
# BACKUP AND MAINTENANCE
# ============================================================================
# Backup location
BACKUP_LOCATION=/backups/blockscout
BACKUP_RETENTION_DAYS=30

# Database maintenance
DB_VACUUM_SCHEDULE=0 2 * * 0  # Weekly Sunday 2 AM UTC
DB_REINDEX_SCHEDULE=0 3 * * 0  # Weekly Sunday 3 AM UTC
